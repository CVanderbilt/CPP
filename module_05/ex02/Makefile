# SIMPLE ===================================================================================
NAME = buro2
# ==========================================================================================

# SRCS =====================================================================================
SRCS_DIR = 

SRCS =	Bureaucrat.cpp main.cpp Form.cpp PresidentialPardonForm.cpp \
	RobotomyRequestForm.cpp ShrubberyCreationForm.cpp
# ==========================================================================================

# INCLUDES =================================================================================
# ==========================================================================================

# DEPEDENCIES ==============================================================================
DEPS = $(INCS_DIR)/
# ==========================================================================================

# FLAGS ====================================================================================
INCLUDE = -I$(INCS_DIR)
FLAGS = -Wall -Wextra -Werror
# ==========================================================================================

# OBJS =====================================================================================
OBJS_DIR 	= 	objs/

OBJ 		= 	$(SRCS:.cpp=.o)
OBJS 		= 	$(addprefix $(OBJS_DIR), $(OBJ))
# ==========================================================================================

# COLORS ===================================================================================
_GREEN=$'\x1b[32m
_WHITE=$'\x1b[37m
# ==========================================================================================

# FROM SUBJECT =============================================================================
$(OBJS_DIR)%.o :	$(SRCS_DIR)%.cpp
	@mkdir -p $(OBJS_DIR)
	clang++ $(FLAGS) -c $< -o $@

$(NAME): $(OBJS)
	clang++ $(FLAGS) -o $(NAME) $(OBJS)

all: $(NAME)

clean:
	rm -rf $(OBJS_DIR)
	

fclean: clean
	rm -f $(NAME)

re: fclean all
# ==========================================================================================

# SUP ======================================================================================
run: $(NAME)
	./$(NAME)
# ==========================================================================================